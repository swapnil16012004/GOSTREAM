<% layout("/layouts/boilerplate") %>
<div class="row justify-content-around">
        <% for(listing of marvelListings) {%>
            <% if((listing.title).toLowerCase().includes(key.toLowerCase())) {%>
                <div class="col-sm-12 col-md-6 col-lg-3 mb-4 mt-2 card-body">
                <div class="card">
                    <a href="/listings/marvel/<%=listing._id%>" class="newCard">
